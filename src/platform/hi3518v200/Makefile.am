	-DPACKAGE_LOCALE_DIR=\""$(localedir)"\" \
	-DPACKAGE_DATA_DIR=\""$(pkgdatadir)"\" \
	-I. -I$(top_srcdir)/src -I$(top_srcdir)/src/common \
	-I$(top_srcdir)/src/rtsp-server -I$(top_srcdir)/src/dbus \
